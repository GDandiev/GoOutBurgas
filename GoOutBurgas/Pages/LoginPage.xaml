<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="GoOutBurgas.Pages.LoginPage">

    <ScrollView VerticalOptions="FillAndExpand">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!--Main Image-->
            <Image
                Source="logoclear.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <!--Login Label-->
            <VerticalStackLayout>
                <Label Text="Welcome!" FontSize="28" TextColor="SlateBlue" HorizontalTextAlignment ="Center"/>
                <Label Text="Login to your account" FontSize="18" TextColor="SlateBlue" HorizontalTextAlignment ="Center"/>
            </VerticalStackLayout>

            <!--Email Layout-->
            <StackLayout Orientation="Horizontal" Margin="-25,0,0,0">
                
                <Frame HasShadow="True" BorderColor="#F5FFFF" HeightRequest="50" WidthRequest="50" CornerRadius="30">
                    <Image Source="thisisformail.png"
                           HeightRequest="200"
                           HorizontalOptions="Center" >
                    </Image>
                </Frame>

                <!--Textbox Email-->
                <Frame BorderColor="SlateBlue" HorizontalOptions="FillAndExpand" Margin="0,0,-17,0">

                    <Entry Margin="0,0,-10,0" VerticalOptions="Center" Placeholder="Email" IsPassword="False" 
                           Keyboard="Email" TextColor="Gray" ClearButtonVisibility="WhileEditing" MaxLength="20"
                           x:Name ="Email" IsTextPredictionEnabled="True">
                    </Entry>
                    
                </Frame>
                
            </StackLayout>

            <!--Password TextBox-->
            <StackLayout Orientation="Horizontal" Margin="-25,0,0,0" >
                
                <Frame HasShadow="True" BorderColor="#F5FFFF" HeightRequest="50" WidthRequest="50" CornerRadius="30" >

                    <Image Source="lock.png"
                            SemanticProperties.Description="Cute dot net bot waving hi to you!"
                            HeightRequest="200"
                            HorizontalOptions="Center" >
                    </Image>
                    
                </Frame>

                <!--Textbox Password-->
                <Frame BorderColor="SlateBlue" HorizontalOptions="FillAndExpand" Margin="0,0,-17,0">

                    <Entry Margin="0,0,-10,0" VerticalOptions="Center" Placeholder="Password" 
                           IsPassword="True" TextColor="Gray" ClearButtonVisibility="WhileEditing"
                           MaxLength="20" MaximumHeightRequest="50" 
                           x:Name ="Pass" IsTextPredictionEnabled="True">
                    </Entry>
                    
                </Frame>

            </StackLayout>

            <!--Show Pass-->
            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" >

                <Label Text="Show password" FontAttributes="Bold" FontSize="16"/>

                <CheckBox CheckedChanged="OnCheckBoxCheckedChanged" x:Name="Check" Margin="-5,-5,0,0"/>

            </HorizontalStackLayout>

            <!--ButtonLogin-->
            <Button Text="Login" FontAttributes="Bold"
                    TextColor="White" VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked" FontSize="15" Margin="0,-15,0,-15" >

            </Button>

            <!--Sign In-->
            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="-10,0,0,0" >

                <Label Text="If you don't already have an account " FontAttributes="Bold" FontSize="12"/>

                <Label Text="SIGN UP" FontSize="12" FontAttributes="Bold" TextColor="{x:StaticResource Primary}" />


                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_For_SignUP" />
                </HorizontalStackLayout.GestureRecognizers>

            </HorizontalStackLayout>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>