<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GoOutBurgas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GoOutBurgas.Pages"
    Shell.TabBarIsVisible="False"
    Shell.BackgroundColor="{AppThemeBinding Light = #2b62aa, Dark=#2f3889}"
    TabBarBackgroundColor="{AppThemeBinding Light=#2b62aa, Dark=#2f3889}"
    Shell.TabBarUnselectedColor="{AppThemeBinding Light=#252525, Dark=#25252}" Shell.TabBarTitleColor="{AppThemeBinding Light= #2b62aa, Dark= White}"
    Shell.TabBarDisabledColor="White">
    

    <!--<ShellContent 
        Shell.TabBarIsVisible="False" 
        Shell.BackgroundColor="#2b62aa"..
        IsVisible="False"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />-->

    <TabBar>
        
        <Tab Title="Map"
             Icon="{AppThemeBinding Light=thisisformaps.png, Dark=thisisformapsdark.png}">
            <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" />
        </Tab>
         
        <Tab Title="Tournament"
             Icon="{AppThemeBinding Light=thisisfortrophy.png, Dark=trophydark.png}">
            <ShellContent ContentTemplate="{DataTemplate local:TournamentTreePage}" />
        </Tab>

    </TabBar>

</Shell>
