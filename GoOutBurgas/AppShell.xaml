<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GoOutBurgas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GoOutBurgas"
    Shell.FlyoutBehavior="Disabled" 
    FlyoutBackgroundColor="{AppThemeBinding Light=White, Dark=LightGray}"
    TabBarBackgroundColor="{AppThemeBinding Light=White, Dark=LightGray}">

    <ShellContent Shell.TabBarIsVisible="True" Shell.BackgroundColor="#2b62aa"
        ContentTemplate="{DataTemplate local:Pages.LoginPage}"
        Route="LoginPage" />

</Shell>
